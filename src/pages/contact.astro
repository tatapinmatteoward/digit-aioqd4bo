---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Contact Us - Digital Rights Law Group";
const pageDescription = "Reach out to the Digital Rights Law Group for expert legal advice on digital rights and copyright issues. We're here to help protect your online presence.";
const officeInfo = {
  address: "123 Tech Avenue, Suite 400, Silicon Valley, CA 94043",
  phone: "(555) 123-4567",
  email: "info@digitalrightslaw.com",
  hours: "Monday - Friday, 9:00 AM - 6:00 PM PST"
};
const helpTypes = [
  {
    title: "General Inquiries",
    description: "Have questions about our services? Use our contact form below or send an email to get a prompt response.",
    icon: "fas fa-question-circle"
  },
  {
    title: "Case Consultations",
    description: "Ready to discuss your specific digital rights issue? Schedule a consultation with our legal experts.",
    icon: "fas fa-calendar-check"
  },
  {
    title: "Legal Advice",
    description: "Need guidance on copyright protection, online disputes, or digital asset management? We're here to help.",
    icon: "fas fa-lightbulb"
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="relative overflow-hidden">
    <!-- Hero Section -->
    <div class="relative bg-gradient-to-r from-primary to-accent py-24 lg:py-32">
      <div class="absolute inset-0 bg-black opacity-10"></div>
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-3xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6">
            Contact Us
          </h1>
          <p class="text-xl md:text-2xl text-white opacity-90 mb-8">
            Expert Legal Guidance in Digital Rights and Copyright Protection
          </p>
          <div class="bg-white bg-opacity-10 backdrop-blur-sm rounded-xl p-6 max-w-xl mx-auto">
            <p class="text-white text-lg">
              Reach out to our team for personalized legal solutions tailored to your digital rights needs.
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Contact Content Section -->
    <div class="container mx-auto px-4 py-16">
      <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-2xl shadow-xl p-6 md:p-8 mb-16 border border-gray-100">
          <h2 class="text-3xl font-bold text-primary mb-6">Get in Touch</h2>
          <p class="text-gray-700 text-lg mb-8 leading-relaxed">
            At the <span class="font-bold text-primary">Digital Rights Law Group</span>, we're dedicated to providing <span class="font-bold text-accent">expert legal guidance</span> in digital rights and copyright protection. Whether you're facing a complex online dispute or need proactive advice, our team is ready to assist. Get in touch today to discuss how we can safeguard your digital assets.
          </p>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
              <h3 class="text-2xl font-semibold text-primary mb-4">Our Office</h3>
              <ul class="space-y-4">
                <li class="flex items-start">
                  <i class="fas fa-map-marker-alt text-accent mt-1 mr-3 text-xl"></i>
                  <span class="text-gray-700">{officeInfo.address}</span>
                </li>
                <li class="flex items-center">
                  <i class="fas fa-phone text-accent mr-3 text-xl"></i>
                  <span class="text-gray-700">{officeInfo.phone}</span>
                </li>
                <li class="flex items-center">
                  <i class="fas fa-envelope text-accent mr-3 text-xl"></i>
                  <span class="text-gray-700">{officeInfo.email}</span>
                </li>
                <li class="flex items-center">
                  <i class="fas fa-clock text-accent mr-3 text-xl"></i>
                  <span class="text-gray-700">{officeInfo.hours}</span>
                </li>
              </ul>
              <p class="mt-6 text-gray-600">
                We offer consultations via phone, email, or in-person meetings (by appointment).
              </p>
            </div>
            
            <div>
              <h3 class="text-2xl font-semibold text-primary mb-4">How Can We Help?</h3>
              <div class="space-y-6">
                {helpTypes.map((item, index) => (
                  <div class="flex items-start p-4 rounded-lg bg-gray-50 hover:bg-gray-100 transition-colors">
                    <i class={`${item.icon} text-2xl text-accent mr-4 mt-1`}></i>
                    <div>
                      <h4 class="font-bold text-lg text-primary">{item.title}</h4>
                      <p class="text-gray-700">{item.description}</p>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Form Section -->
        <div class="bg-gradient-to-br from-primary to-blue-900 rounded-2xl shadow-xl p-8 md:p-12">
          <div class="max-w-3xl mx-auto">
            <h2 class="text-3xl font-bold text-white mb-2">Send us a Message</h2>
            <p class="text-blue-100 mb-8">
              Fill out the form below and our team will get back to you as soon as possible.
            </p>
            
            <form class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="name" class="block text-white mb-2 font-medium">Full Name</label>
                  <input 
                    type="text" 
                    id="name" 
                    class="w-full px-4 py-3 rounded-lg focus:ring-2 focus:ring-accent focus:outline-none transition"
                    placeholder="Your name"
                  />
                </div>
                <div>
                  <label for="email" class="block text-white mb-2 font-medium">Email Address</label>
                  <input 
                    type="email" 
                    id="email" 
                    class="w-full px-4 py-3 rounded-lg focus:ring-2 focus:ring-accent focus:outline-none transition"
                    placeholder="your.email@example.com"
                  />
                </div>
              </div>
              
              <div>
                <label for="subject" class="block text-white mb-2 font-medium">Subject</label>
                <input 
                  type="text" 
                  id="subject" 
                  class="w-full px-4 py-3 rounded-lg focus:ring-2 focus:ring-accent focus:outline-none transition"
                  placeholder="What is this regarding?"
                />
              </div>
              
              <div>
                <label for="message" class="block text-white mb-2 font-medium">Your Message</label>
                <textarea 
                  id="message" 
                  rows="5" 
                  class="w-full px-4 py-3 rounded-lg focus:ring-2 focus:ring-accent focus:outline-none transition"
                  placeholder="Tell us about your digital rights concern..."
                ></textarea>
              </div>
              
              <button 
                type="submit" 
                class="w-full bg-accent hover:bg-[#ff5252] text-white font-bold py-4 px-6 rounded-lg transition duration-300 transform hover:scale-[1.02] shadow-lg"
              >
                Send Message
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  @import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css');
  
  .contact-card {
    transition: all 0.3s ease;
    transform: translateY(0);
  }
  
  .contact-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }
  
  .fade-in {
    animation: fadeIn 0.6s ease-out forwards;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .delay-1 { animation-delay: 0.1s; }
  .delay-2 { animation-delay: 0.2s; }
  .delay-3 { animation-delay: 0.3s; }
  .delay-4 { animation-delay: 0.4s;
  }
</style>